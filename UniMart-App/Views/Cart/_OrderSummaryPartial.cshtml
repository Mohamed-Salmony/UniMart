@using System.Globalization
@{
    var subtotal = ViewBag.Subtotal ?? 0m;
    var shipping = ViewBag.Shipping ?? 0m;
    var tax = ViewBag.Tax ?? 0m;
    var total = ViewBag.Total ?? 0m;
    var taxPercent = ViewBag.TaxPercent ?? 0m;
}
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <h5 class="card-title mb-3" data-translate="order_summary">Order Summary</h5>
        <div class="d-flex justify-content-between mb-2">
            <span data-translate="subtotal">Subtotal</span>
            <span>EGP @subtotal.ToString("F2")</span>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <span data-translate="shipping">Shipping</span>
            <span>EGP @shipping.ToString("F2")</span>
        </div>
        <div class="d-flex justify-content-between mb-2">
            <span>Tax <span class="text-muted">(@taxPercent.ToString("F0")%)</span></span>
            <span>EGP @tax.ToString("F2")</span>
        </div>
        <hr />
        <div class="d-flex justify-content-between fw-bold mb-3">
            <span data-translate="total">Total</span>
            <span>EGP @total.ToString("F2")</span>
        </div>
        <form id="promo-form" class="input-group mb-3">
            <input type="text" id="promo-code" class="form-control" placeholder="Promo code" aria-label="Promo code" />
            <button class="btn btn-outline-primary" type="submit" data-translate="apply">Apply</button>
        </form>
        <a asp-controller="Cart" asp-action="Shipping" class="btn btn-success w-100" data-translate="continue_to_shipping">Continue to Shipping</a>
    </div>
</div>