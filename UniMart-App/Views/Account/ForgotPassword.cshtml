@model UniMart_App.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0" data-translate="forgot_password">Forgot Password</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ForgotPassword" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label" data-translate="email_address">Email address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100" data-translate="send_password_reset_link">Send Password Reset Link</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Login" asp-controller="Account" data-translate="back_to_login">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}